<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linear_layout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="70dip"
		android:gravity="left" android:background="#E1DFD8"
		android:paddingLeft="8dip" android:paddingTop="8dip">
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="fill_parent">
			<TextView android:text="Preferences" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30dip"
				android:textColor="#37312C" android:layout_gravity="top" />
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1" />
			<TextView android:text="" android:id="@+id/last_updated"
				android:textSize="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="bottom"
				android:padding="2dip" android:textColor="#8F888888" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1" />
		<ImageView android:id="@+id/logo" android:src="@drawable/logo"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="right|bottom"></ImageView>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="5dip"
		android:gravity="left|bottom" android:background="#888888" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:background="#FFFFFF"
		android:padding="10dip">
		<TextView android:id="@+id/prefs_heading_energy"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Energy-saving preferences" android:textColor="#000000"
			android:layout_gravity="center_horizontal" android:padding="5dip"
			android:textStyle="bold"></TextView>
		<CheckBox android:textColor="#000000" android:id="@+id/pref_service"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/prefs_service" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="@string/prefs_battery_tip" android:id="@+id/TextView01"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10dip"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="20dip" />
		<TextView android:id="@+id/prefs_heading_personal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Personal preferences" android:textColor="#000000"
			android:layout_gravity="center_horizontal" android:padding="5dip"
			android:textStyle="bold"></TextView>
		<CheckBox android:text="@string/prefs_vibrate"
			android:textColor="#000000" android:id="@+id/pref_vibrate"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1" />
		<Button android:text="@string/prefs_clear" android:id="@+id/clear"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FF2222" android:layout_gravity="bottom|center_horizontal"></Button>
	

</LinearLayout>
	</LinearLayout>